<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splash_screen_bg">
        <item name="android:background">@drawable/splash_image_dark</item>
    </style>

    <style name="home_bg">
        <item name="android:background">@drawable/main_bg_dark</item>
    </style>

    <style name="bottom_navigation_bar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color_dark</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color_dark</item>
    </style>

    <style name="details_bg">
        <item name="android:src">@drawable/details_bg_dark</item>
    </style>

    <style name="back_button_color">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="details_text_color">
        <item name="android:textColor">@color/gold</item>
    </style>
</resources>