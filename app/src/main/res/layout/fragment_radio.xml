<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/radio_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginVertical="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/radio_image" />

    <TextView
        style="@style/text_style"
        android:id="@+id/quran_radio_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_channel_label"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_image" />

    <ImageView
        android:id="@+id/play_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_marginVertical="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quran_radio_label" />
</androidx.constraintlayout.widget.ConstraintLayout>