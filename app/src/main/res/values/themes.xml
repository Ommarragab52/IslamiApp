<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="text_style">
        <item name="android:textColor">@color/black_2</item>
    </style>

    <style name="splash_screen_bg">
        <item name="android:background">@drawable/splash_image</item>
    </style>

    <style name="home_bg">
        <item name="android:background">@drawable/main_bg</item>
    </style>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" />

    <style name="bottom_navigation_bar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
    </style>

    <style name="details_bg">
        <item name="android:src">@drawable/details_bg</item>
    </style>

    <style name="back_button_color">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="details_text_color">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>